<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.advangelists.nativeads.MediaLayout
        android:id="@+id/native_ad_video_view"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/native_ad_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/native_ad_video_view"
        app:layout_constraintLeft_toLeftOf="@id/native_ad_video_view"
        app:layout_constraintRight_toRightOf="@id/native_ad_video_view"
        app:layout_constraintTop_toTopOf="@id/native_ad_video_view"
        />
    <TextView
        android:id="@+id/native_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/native_ad_video_view"
        app:layout_constraintRight_toRightOf="@id/native_ad_video_view"
        app:layout_constraintTop_toTopOf="@id/native_ad_video_view"
        />
    <TextView
        android:id="@+id/native_ad_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/native_ad_video_view"
        app:layout_constraintRight_toRightOf="@id/native_ad_video_view"
        app:layout_constraintTop_toBottomOf="@id/native_ad_title"
        />

</android.support.constraint.ConstraintLayout>